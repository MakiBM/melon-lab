{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./packages",
    "paths": {
      "@melonproject/graphql-schema": ["graphql-schema/src"],
      "@melonproject/graphql-server": ["graphql-server/src"],
      "@melonproject/manager-interface": ["manager-interface/src"],
      "@melonproject/manager-components": ["manager-components/src"]
    }
  }
}
