{
  "name": "@melonproject/graphql-schema",
  "version": "0.0.0",
  "license": "AGPL-v3",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "tslint -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest"
  },
  "author": "Simon Emanuel Schmid <simon@schmid.io>",
  "contributors": [
    "Sebastian Siemssen <fubhy@fubhy.com>"
  ],
  "dependencies": {
    "@melonproject/melon.js": "^0.7.6",
    "graphql": "^0.13.2",
    "graphql-tools": "^2.23.1"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "prettier": "^1.11.1",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/config/jest.setup"
    ],
    "transform": {
      "^.+\\.(jsx?|tsx?)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@melonproject/)"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.build.json"
      }
    }
  }
}
