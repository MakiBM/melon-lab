{
  "name": "@melonproject/graphql-server",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "clean": "rimraf coverage dist",
    "dev": "backpack dev",
    "build": "backpack build",
    "start": "node --require dotenv-extended/config dist",
    "lint": "tslint -p tsconfig.build.json",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "test": "jest"
  },
  "author": "Melonport <team@melonport.com>",
  "contributors": [
    "Simon Emanuel Schmid <simon@schmid.io>",
    "Sebastian Siemssen <fubhy@fubhy.com>"
  ],
  "dependencies": {
    "@melonproject/graphql-schema": "^0.0.0",
    "debug": "^3.1.0",
    "dotenv-extended": "^2.0.1",
    "graphql": "^0.13.2",
    "graphql-subscriptions": "^0.5.8",
    "graphql-yoga": "^1.7.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "backpack-core": "^0.7.0",
    "graphql-tag": "^2.9.1",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "nodemon": "^1.17.3",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.2",
    "ts-loader": "^3.3.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.8.1",
    "webpack": "^3.0.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/tests/config/jest.setup"
    ],
    "transform": {
      "^.+\\.(jsx?|tsx?)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@melonproject/)"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    }
  }
}
