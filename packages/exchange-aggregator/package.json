{
  "name": "@melonproject/exchange-aggregator",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "scripts": {
    "clean": "rimraf coverage dist",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "test": "jest"
  },
  "author": "Melonport <team@melonport.com>",
  "contributors": [
    "Simon Emanuel Schmid <simon@schmid.io>",
    "Sebastian Siemssen <fubhy@fubhy.com>",
    "Jenna Zenk <jenna@melonport.com>"
  ],
  "dependencies": {
    "@melonproject/melon.js": "^0.7.6",
    "axios": "^0.18.0",
    "bignumber.js": "^5.0.0",
    "ramda": "^0.25.0",
    "rxjs": "^5.5.9",
    "websocket": "^1.0.25"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/tests/config/jest.setup"
    ],
    "transform": {
      "^.+\\.(jsx?|tsx?)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@melonproject/)"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    }
  }
}
